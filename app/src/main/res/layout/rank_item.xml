<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ci_rel1"
        android:layout_width="fill_parent"
        android:layout_height="75dip" >

        <com.util.RoundImageView
            android:id="@+id/rank_avatar"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:src="@drawable/m"
            app:roundHeight="5dip"
            app:roundWidth="5dip" />

        <TextView
            android:id="@+id/rank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rank_avatar"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/rank_avatar"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="班义鲲"
            android:textColor="@color/common_black"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/rank_qianming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rank_avatar"
            android:layout_marginLeft="20dip"
            android:layout_toLeftOf="@+id/rank_position"
            android:layout_toRightOf="@+id/rank_avatar"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="既然目标是地平线，留给世界的只能是背影"
            android:textColor="@color/common_coffee"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/rank_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/rank_avatar"
            android:layout_marginRight="30dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/message_color"
            android:textSize="30dip" />

        <Button
            android:id="@+id/rank_div"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/common_div2" />
    </RelativeLayout>

</RelativeLayout>