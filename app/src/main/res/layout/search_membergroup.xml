<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/search_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/search_rel1"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="@color/login_bg" >

        <EditText
            android:id="@+id/search_edit_usergroup"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:layout_toLeftOf="@+id/search_usergroup"
            android:background="@drawable/edittext"
            android:hint="用户或慈善组账号"
            android:paddingLeft="30dip"
            android:paddingRight="10dip"
            android:singleLine="true"
            android:textSize="15dip" />

        <ImageView
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/search2" />

        <TextView
            android:id="@+id/search_usergroup"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/message_color" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="@color/common_div2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_rel2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_rel1"
        android:background="@color/common_white" >

        <TextView
            android:id="@+id/search_user"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/add_div3"
            android:background="@drawable/me_btnbg"
            android:gravity="left|center"
            android:paddingLeft="25dip"
            android:text="用户："
            android:textColor="@color/common_black"
            android:textSize="16dip" />

        <Button
            android:id="@+id/add_div4"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/search_user"
            android:background="@color/common_div" />

        <TextView
            android:id="@+id/search_group"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/add_div4"
            android:background="@drawable/me_btnbg"
            android:gravity="left|center"
            android:paddingLeft="25dip"
            android:text="慈善组："
            android:textColor="@color/common_black"
            android:textSize="16dip" />

        <Button
            android:id="@+id/add_div5"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/search_group"
            android:background="@color/common_div2" />
    </RelativeLayout>

</RelativeLayout>