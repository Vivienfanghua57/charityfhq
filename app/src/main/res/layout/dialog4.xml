<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/dia_lin1"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@color/login_bg"
        android:orientation="horizontal"
        android:alpha="0.99">

        <TextView
            android:id="@+id/participate"
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:drawableTop="@drawable/particapate"
            android:gravity="center"
            android:paddingTop="15dip"
            android:background="@drawable/list_item_bg"
            android:text="参与"
            android:textColor="@color/common_coffee" />

        <View
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="0.01"
            android:background="@color/common_div2"></View>

        <TextView
            android:id="@+id/share"
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:drawableTop="@drawable/share"
            android:gravity="center"
            android:paddingTop="15dip"
            android:background="@drawable/list_item_bg"
            android:text="分享"
            android:textColor="@color/common_coffee" />

        <View
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="0.01"
            android:background="@color/common_div2"></View>

        <TextView
            android:id="@+id/collect"
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:drawableTop="@drawable/collect1"
            android:gravity="center"
            android:paddingTop="15dip"
            android:background="@drawable/list_item_bg"
            android:text="收藏"
            android:textColor="@color/common_coffee" />

        <View
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="0.01"
            android:background="@color/common_div2"></View>

        <TextView
            android:id="@+id/warning"
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:drawableTop="@drawable/warning"
            android:gravity="center"
            android:paddingTop="15dip"
            android:background="@drawable/list_item_bg"
            android:text="举报"
            android:textColor="@color/common_coffee" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dip"
        android:layout_below="@+id/dia_lin1"
        android:background="@color/common_div2"></View>
</RelativeLayout>