<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/fragment_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/pro_bg"
        android:layout_width="match_parent"
        android:layout_height="500dip"
        android:layout_marginTop="-100dip"
        android:scaleType="fitXY"
        android:src="@drawable/pro_bg3" />

    <View
        android:id="@+id/line"
        android:layout_width="2dip"
        android:layout_height="180dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dip"
        android:background="@color/common_transparent" />

    <com.util.MyScrollView
        android:id="@+id/goods_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <GridView
                android:id="@+id/grid_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="62dip"
                android:horizontalSpacing="20dip"
                android:listSelector="@color/common_transparent"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="20dip" >
            </GridView>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/grid_goods"
                android:layout_marginTop="20dip"
                android:background="@color/login_bg" >

                <TextView
                    android:id="@+id/goods_detail_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginLeft="15dip"
                    android:gravity="center"
                    android:text="具体信息"
                    android:textColor="@color/common_coffee" />

                <RelativeLayout
                    android:id="@+id/gd_rel1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_detail_text1"
                    android:background="@color/common_white" >

                    <Button
                        android:id="@+id/gd_div1"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/common_div" />

                    <TextView
                        android:id="@+id/goods_detail_character1"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_below="@+id/gd_div1"
                        android:background="@drawable/me_btnbg"
                        android:gravity="left|center"
                        android:paddingLeft="25dip"
                        android:text="版块"
                        android:textColor="@color/common_black"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/goods_detail_forum"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/gd_div1"
                        android:layout_marginRight="40dip"
                        android:background="@drawable/me_btnbg"
                        android:gravity="center"
                        android:text="女装|羊毛衫"
                        android:textColor="@color/message_color"
                        android:textSize="15dip" />

                    <Button
                        android:id="@+id/gd_div2"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:layout_below="@+id/goods_detail_character1"
                        android:layout_marginLeft="25dip"
                        android:background="@color/common_div" />

                    <TextView
                        android:id="@+id/goods_detail_character2"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_below="@+id/gd_div2"
                        android:background="@drawable/me_btnbg"
                        android:gravity="left|center"
                        android:paddingLeft="25dip"
                        android:text="尺寸"
                        android:textColor="@color/common_black"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/goods_detail_param1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/gd_div2"
                        android:layout_marginRight="40dip"
                        android:background="@drawable/me_btnbg"
                        android:gravity="center"
                        android:text="XL"
                        android:textColor="@color/message_color"
                        android:textSize="15dip" />

                    <Button
                        android:id="@+id/gd_div3"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:layout_below="@+id/goods_detail_character2"
                        android:layout_marginLeft="25dip"
                        android:background="@color/common_div" />

                    <TextView
                        android:id="@+id/goods_detail_character3"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_below="@+id/gd_div3"
                        android:background="@drawable/me_btnbg"
                        android:gravity="left|center"
                        android:paddingLeft="25dip"
                        android:text="大小"
                        android:textColor="@color/common_black"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/goods_detail_param2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/gd_div3"
                        android:layout_marginRight="40dip"
                        android:background="@drawable/me_btnbg"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/message_color"
                        android:textSize="15dip" />

                    <Button
                        android:id="@+id/gd_div4"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:layout_below="@+id/goods_detail_character3"
                        android:layout_marginLeft="25dip"
                        android:background="@color/common_div" />

                    <TextView
                        android:id="@+id/goods_detail_character4"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_below="@+id/gd_div4"
                        android:background="@drawable/me_btnbg"
                        android:gravity="left|center"
                        android:paddingLeft="25dip"
                        android:text="颜色"
                        android:textColor="@color/common_black"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/goods_detail_param3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/gd_div4"
                        android:layout_marginRight="40dip"
                        android:background="@drawable/me_btnbg"
                        android:gravity="center"
                        android:text="蓝色"
                        android:textColor="@color/message_color"
                        android:textSize="15dip" />

                    <Button
                        android:id="@+id/gd_div5"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:layout_below="@+id/goods_detail_character4"
                        android:layout_marginLeft="25dip"
                        android:background="@color/common_div" />

                    <TextView
                        android:id="@+id/goods_detail_character5"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_below="@+id/gd_div5"
                        android:background="@drawable/me_btnbg"
                        android:gravity="left|center"
                        android:paddingLeft="25dip"
                        android:text="数量"
                        android:textColor="@color/common_black"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/goods_detail_param4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/gd_div5"
                        android:layout_marginRight="40dip"
                        android:background="@drawable/me_btnbg"
                        android:gravity="center"
                        android:text="200"
                        android:textColor="@color/message_color"
                        android:textSize="15dip" />

                    <Button
                        android:id="@+id/gd_div6"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:layout_below="@+id/goods_detail_character5"
                        android:background="@color/common_div" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/goods_detail_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_below="@+id/gd_rel1"
                    android:layout_marginLeft="15dip"
                    android:gravity="center"
                    android:text="相关描述"
                    android:textColor="@color/common_coffee" />

                <RelativeLayout
                    android:id="@+id/gd_rel2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_detail_text2"
                    android:background="@color/common_white" >

                    <Button
                        android:id="@+id/gd_div7"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:layout_alignParentTop="true"
                        android:background="@color/common_div" />

                    <EditText
                        android:id="@+id/goods_detail_addition"
                        android:layout_width="fill_parent"
                        android:layout_height="100dip"
                        android:background="@color/common_transparent"
                        android:editable="false"
                        android:gravity="top"
                        android:paddingLeft="10dip"
                        android:paddingTop="10dip"
                        android:text="这是我们班同学们集体捐赠的军训服装，希望可以帮助到灾区的小朋友们"
                        android:textSize="15dip" />

                    <Button
                        android:id="@+id/gd_div8"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:layout_below="@+id/goods_detail_addition"
                        android:background="@color/common_div" />

                </RelativeLayout>
                                                        
                        <Button
                        android:id="@+id/gd_div9"
                        android:layout_width="fill_parent"
                        android:layout_height="20dip"
                        android:layout_below="@+id/gd_rel2"
                        android:background="@color/common_transparent" />
            </RelativeLayout>
        </RelativeLayout>
    </com.util.MyScrollView>

    <RelativeLayout
        android:id="@+id/goods_detail_rel1"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:layout_alignParentTop="true"
        android:background="@color/common_transparent"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="物品详情"
            android:textColor="@color/common_white"
            android:textSize="20dip" >
        </TextView>

        <Button
            android:id="@+id/pro_back"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/left" />

        <Button
            android:id="@+id/pro_edit"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/edit1" />
    </RelativeLayout>

</RelativeLayout>