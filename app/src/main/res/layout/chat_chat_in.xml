<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.charitydemo"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip"
    tools:context="com.chat.ChatAdapter" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@color/common_transparent"
            android:padding="2dip"
            android:text="今天  16:50"
            android:textColor="@color/common_coffee"
            android:textSize="12dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip" >

        <com.util.RoundAngleImageView
            android:id="@+id/useravatar"
            android:layout_width="52dip"
            android:layout_height="52dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:onClick="chat_avatar"
            android:src="@drawable/f"
            app:roundHeight="5dip"
            app:roundWidth="5dip" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="5dip"
            android:layout_toRightOf="@id/useravatar"
            android:background="@drawable/incoming"
            android:clickable="true"
            android:focusable="true"
            android:gravity="left|center"
            android:lineSpacingExtra="2dip"
            android:minHeight="50dip"
            android:text="ddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
            android:textColor="@color/common_black"
            android:textSize="15dip" />
    </RelativeLayout>

</LinearLayout>