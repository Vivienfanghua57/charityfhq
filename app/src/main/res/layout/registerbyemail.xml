<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_rel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/login_bg"
    android:orientation="vertical" >

    <Button
        android:id="@+id/register_div1"
        android:layout_width="fill_parent"
        android:layout_height="0.1dip"
        android:layout_marginTop="85dip"
        android:background="@color/common_div2" />

    <RelativeLayout
        android:id="@+id/register_rel1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_div1"
        android:background="@color/common_white" >

        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:text="用户名" />

        <EditText
            android:id="@+id/username_edit"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignLeft="@+id/confirm_edit"
            android:layout_marginRight="32dip"
            android:background="@color/common_transparent"
            android:hint="请输入用户名"
            android:singleLine="true"
            android:textSize="15dip" />

        <ImageView
            android:id="@+id/delbtn1"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17.5dip"
            android:layout_marginRight="15dip"
            android:src="@drawable/cross"
            android:visibility="gone" />

        <Button
            android:id="@+id/del1"
            android:layout_width="32dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:background="@color/common_transparent" />

        <Button
            android:id="@+id/register_div2"
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:layout_below="@+id/username_edit"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/common_div2" />

        <TextView
            android:id="@+id/pwd_text"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_below="@+id/register_div2"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:text="密码 " />

        <EditText
            android:id="@+id/pwd_edit"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignLeft="@+id/confirm_edit"
            android:layout_below="@+id/register_div2"
            android:layout_marginRight="32dip"
            android:background="@color/common_transparent"
            android:hint="建议数字，字母等组合"
            android:password="true"
            android:singleLine="true"
            android:textSize="15dip" />

        <ImageView
            android:id="@+id/delbtn2"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/register_div2"
            android:layout_marginRight="15dip"
            android:layout_marginTop="17.5dip"
            android:src="@drawable/cross"
            android:visibility="gone" />

        <Button
            android:id="@+id/del2"
            android:layout_width="32dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/register_div2"
            android:background="@color/common_transparent" />

        <Button
            android:id="@+id/register_div3"
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:layout_below="@+id/pwd_edit"
            android:layout_marginLeft="15dip"
            android:background="@color/common_div2" />

        <TextView
            android:id="@+id/pwd_confirm_text"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_below="@+id/register_div3"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:text="确认密码" />

        <EditText
            android:id="@+id/confirm_edit"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/register_div3"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="32dip"
            android:layout_toRightOf="@+id/pwd_confirm_text"
            android:background="@color/common_transparent"
            android:hint="再次输入密码"
            android:password="true"
            android:singleLine="true"
            android:textSize="15dip" />
                <Button
            android:id="@+id/register_div4"
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:layout_below="@+id/confirm_edit"
            android:layout_marginLeft="15dip"
            android:background="@color/common_div2" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_below="@+id/register_div4"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:text="注册邮箱" />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/register_div4"
            android:layout_alignLeft="@+id/confirm_edit"
            android:layout_marginRight="32dip"
            android:background="@color/common_transparent"
            android:hint="请输入注册邮箱"
            android:singleLine="true"
            android:textSize="15dip" />
    </RelativeLayout>

    <Button
        android:id="@+id/register_div5"
        android:layout_width="fill_parent"
        android:layout_height="0.1dip"
        android:layout_below="@+id/register_rel1"
        android:background="@color/common_div2" />

    <Button
        android:id="@+id/register_btn1"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/register_rel1"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:text="确认注册"
        android:textColor="@color/common_white"
        android:textSize="16dip" />

    <Button
        android:id="@+id/register_btn2"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/register_rel1"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/pop_btn" />

</RelativeLayout>