<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <RelativeLayout
                android:id="@+id/leftmenu_rel2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_bg3" >

                <ImageView
                    android:id="@+id/child_icon"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/notice_test1" />

                <TextView
                    android:id="@+id/child_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="大家电"
                    android:textColor="@color/common_black"
                    android:textSize="18dip" />
                                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/right" />
                                
            <Button
                android:id="@+id/group_div1"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/child_icon"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:background="@color/common_div2"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
            </RelativeLayout>

</LinearLayout>
