<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pi_rel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/login_bg"
    android:orientation="vertical" >

    <Button
        android:id="@+id/pi_div1"
        android:layout_width="fill_parent"
        android:layout_height="0.1dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/common_div2"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <com.util.RoundImageView
        android:id="@+id/post_avatar"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_below="@+id/pi_div1"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:src="@drawable/m"
        app:roundHeight="5dip"
        app:roundWidth="5dip" />

    <TextView
        android:id="@+id/post_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/post_avatar"
        android:layout_marginLeft="12dip"
        android:layout_toRightOf="@+id/post_avatar"
        android:gravity="center"
        android:text="王华敏"
        android:textColor="@color/common_darkgray"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/post_avatar"
        android:layout_marginLeft="12dip"
        android:layout_toRightOf="@+id/post_avatar"
        android:text="08:36"
        android:textSize="16dip" />

    <Button
        android:id="@+id/read_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/post_avatar"
        android:layout_marginRight="20dip"
        android:background="@drawable/quickly" />

    <TextView
        android:id="@+id/post_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/post_time"
        android:layout_alignRight="@+id/read_reply"
        android:layout_below="@+id/post_avatar"
        android:layout_marginTop="10dip"
        android:text="暑假想去陕西支教，请问有没有一起组队"
        android:textColor="@color/common_black"
        android:textSize="18dip" />

    <Button
        android:id="@+id/pi_div2"
        android:layout_width="fill_parent"
        android:layout_height="0.1dip"
        android:layout_alignLeft="@+id/post_time"
        android:layout_alignRight="@+id/read_reply"
        android:layout_below="@+id/post_content"
        android:layout_marginTop="10dip"
        android:background="@color/common_div2"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <RelativeLayout
        android:id="@+id/pi_rel1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/post_time"
        android:layout_alignRight="@+id/read_reply"
        android:layout_below="@+id/pi_div2"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/reply_author1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="方华强："
            android:textColor="@color/common_main"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/reply_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reply_author1"
            android:gravity="center|left"
            android:text="好啊好啊好啊！迫不及待呢"
            android:textColor="@color/common_black"
            android:textSize="16dip" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pi_rel2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/post_time"
        android:layout_alignRight="@+id/read_reply"
        android:layout_below="@+id/pi_rel1"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/reply_author2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="班义鲲："
            android:textColor="@color/common_main"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/reply_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reply_author2"
            android:gravity="center|left"
            android:text="赞赞赞！"
            android:textColor="@color/common_black"
            android:textSize="16dip" >
        </TextView>
    </RelativeLayout>
    <Button
        android:id="@+id/pi_div4"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_below="@+id/pi_rel2"
        android:background="@color/common_transparent"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />
    <RelativeLayout
        android:id="@+id/pi_rel3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/post_time"
        android:layout_alignRight="@+id/read_reply"
        android:layout_below="@+id/pi_div4">

        <TextView
            android:id="@+id/expan_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="查看更多回复..."
            android:textColor="@color/common_main"
            android:textSize="12dip" />
    </RelativeLayout>

    <Button
        android:id="@+id/pi_div3"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_below="@+id/pi_rel3"
        android:background="@color/common_transparent"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>