<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/im_rel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/fragment_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/im_rel1"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:layout_alignParentTop="true"
        android:background="@color/common_main"
        android:clickable="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="账户管理"
            android:textColor="@color/common_white"
            android:textSize="20dip" >
        </TextView>

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:clickable="true"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/common_white" />
    </RelativeLayout>

    <ListView
        android:id="@+id/idmanage_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_rel1"
        android:layout_marginTop="25dip"
        android:background="@color/common_white"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/common_div"
        android:dividerHeight="0.1dip"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>
    <RelativeLayout
        android:id="@+id/im_rel2"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dip"
        android:background="@drawable/list_item_bg" >
  <Button 
      android:layout_alignParentTop="true"
      android:background="@color/common_div"
      android:layout_width="fill_parent"
      android:layout_height="0.1dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:text="退出当前账号"
            android:textSize="16dip"
            android:textColor="@color/common_black" />
  <Button 
      android:layout_alignParentBottom="true"
      android:background="@color/common_div"
      android:layout_width="fill_parent"
      android:layout_height="0.1dip"/>
    </RelativeLayout>
</RelativeLayout><!-- From: file:/E:/CharityDemo/app/src/main/res/layout/idmanage.xml -->