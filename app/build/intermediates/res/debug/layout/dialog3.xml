<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog3_rel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dialog3_rel1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/dialog_bg" >

        <TextView
            android:id="@+id/dialog3_content"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:gravity="left|center"
            android:paddingLeft="15dip"
            android:text="操作"
            android:textSize="15dip" />

        <Button
            android:id="@+id/dialog3_div1"
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:layout_below="@+id/dialog3_content"
            android:background="@color/common_div2" />

        <TextView
            android:id="@+id/camera1"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/dialog3_div1"
            android:background="@drawable/me_btnbg"
            android:gravity="left|center"
            android:paddingLeft="15dip"
            android:text="拍照"
            android:textColor="@color/common_black"
            android:textSize="15dip" />

        <Button
            android:id="@+id/dialog3_div2"
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:layout_below="@+id/camera1"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/common_div2" />

        <TextView
            android:id="@+id/album"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/dialog3_div2"
            android:background="@drawable/me_btnbg"
            android:gravity="left|center"
            android:paddingLeft="15dip"
            android:text="相册"
            android:textColor="@color/common_black"
            android:textSize="15dip" />

        <Button
            android:id="@+id/dialog3_div3"
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:layout_below="@+id/album"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/common_div2" />

        <TextView
            android:id="@+id/look"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/dialog3_div3"
            android:background="@drawable/me_btnbg"
            android:gravity="left|center"
            android:paddingLeft="15dip"
            android:text="查看高清图像"
            android:textColor="@color/common_black"
            android:textSize="15dip" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/E:/CharityDemo/app/src/main/res/layout/dialog3.xml -->