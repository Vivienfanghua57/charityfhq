<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dip" >

        <ImageView
            android:id="@+id/load_image"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/loadimg" />
        <ImageView
            android:id="@+id/del_image"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_above="@+id/load_image"
            android:layout_marginBottom="-10dip"
            android:layout_toRightOf="@+id/load_image"
            android:layout_marginLeft="-10dip"
            android:src="@drawable/del" />
        <ImageView
            android:id="@+id/load_play"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerInParent="true"
            android:src="@drawable/play"
            android:visibility="gone"
             />
    </RelativeLayout>

</LinearLayout><!-- From: file:/E:/CharityDemo/app/src/main/res/layout/loadimg_item.xml -->