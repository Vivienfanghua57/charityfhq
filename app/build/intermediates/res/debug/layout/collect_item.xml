<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tc_rel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ci_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:text="服饰"
        android:textColor="@color/common_blue"
        android:textSize="16dip" />

    <ImageView
                android:src="@drawable/test1"
        android:id="@+id/ci_img1"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_below="@+id/ci_type"
        android:layout_marginLeft="18dip"
        android:layout_marginTop="10dip" />

    <ImageView
                android:src="@drawable/test2"
        android:id="@+id/ci_img2"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_below="@+id/ci_type"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/ci_img1" />

    <ImageView
        android:src="@drawable/test3"
        android:id="@+id/ci_img3"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_below="@+id/ci_type"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/ci_img2" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_below="@+id/ci_img1"
        android:background="@color/common_transparent" />

